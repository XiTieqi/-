        <TextBox HorizontalAlignment="Left" Height="28" Margin="282,83,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="286" Name="username"/>
        <TextBox HorizontalAlignment="Left" Height="28" Margin="282,137,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="286" Name="passward"/>
    </Grid>
</Window>
